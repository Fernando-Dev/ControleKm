<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTitle"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.example.fernando.controlekm.Main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivListkm"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ivAddkm"
            android:layout_marginEnd="22dp"
            app:srcCompat="@drawable/listar"
            android:onClick="selecionarOpcao"/>

        <ImageView
            android:id="@+id/ivAddkm"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/add_km"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:onClick="selecionarOpcao"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_main"
            android:text="Cadastrar Km"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/ivAddkm"
            android:layout_alignStart="@+id/ivAddkm"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_main"
            android:text="Listar Km"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/ivListkm"
            android:layout_alignStart="@+id/textView7" />

        <ImageView
            android:id="@+id/ivAddUsuario"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/ivAddkm"
            android:layout_below="@+id/textView2"
            app:srcCompat="@drawable/add_user"
            android:onClick="selecionarOpcao"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_main"
            android:text="Cadastrar Usuário"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/ivAddUsuario"
            android:layout_alignStart="@+id/ivRelatorio" />

        <ImageView
            android:id="@+id/ivListUser"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/ivListkm"
            android:layout_below="@+id/textView3"
            app:srcCompat="@drawable/listar"
            android:onClick="selecionarOpcao"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_main"
            android:text="Listar Usuário"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/ivListUser"
            android:layout_alignEnd="@+id/ivUtils"
            android:layout_marginEnd="11dp" />

        <ImageView
            android:id="@+id/ivRelatorio"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/relatorio"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/ivAddUsuario"
            android:onClick="selecionarOpcao"/>

        <ImageView
            android:id="@+id/ivUtils"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/utils_another"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/ivListUser"
            android:onClick="selecionarOpcao"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rel. Deslocamento"
            android:textColor="@color/colorWhite"
            android:background="@drawable/textview_main"
            android:layout_below="@+id/ivRelatorio"
            android:layout_alignEnd="@+id/textView4" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utilitários"
            android:textColor="@color/colorWhite"
            android:background="@drawable/textview_main"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginStart="12dp" />
    </RelativeLayout>
</ScrollView>




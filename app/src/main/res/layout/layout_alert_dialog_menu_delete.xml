<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_alert_dialog_menu_delete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlert"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5dp"
        android:src="@drawable/ic_action_delete" />


    <TextView
        android:id="@+id/tituloalertDialogDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgDelete"
        android:layout_toEndOf="@+id/imgDelete"
        android:padding="@dimen/padding_5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorTitle"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/mensagemAlertDialogDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDelete"
        android:padding="@dimen/padding_padrao"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorTitle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mensagemAlertDialogDelete"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_padrao">

        <Button
            android:id="@+id/btnAlertDialogDeleteSim"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_padrao"
            android:layout_toEndOf="@+id/btnAlertDialogDeleteNao"
            android:background="@drawable/btn_data"
            android:text="@string/sim" />

        <Button
            android:id="@+id/btnAlertDialogDeleteNao"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_padrao"
            android:background="@drawable/btn_data"
            android:text="@string/nao" />
    </RelativeLayout>


</RelativeLayout>